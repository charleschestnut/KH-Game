<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	">
	
	<!-- User accounts -->

	<bean id="userAccount1" class="security.UserAccount">
		<property name="username" value="admin" />
		<property name="password" value="21232f297a57a5a743894a0e4a801fc3" />
		<property name="authorities">
			<list>
				<bean class="security.Authority">
					<property name="authority" value="ADMIN" />
				</bean>
			</list>
		</property>
	</bean>

	
	<!-- Other domain beans come here -->
	
	<!-- LEGALTEXT -->
	<bean id="legalText1" class="domain.LegalText">
		<property name="type" value="TERMS"/>
		<property name="codeLanguage" value="es"/>
		<property name="body" value="Los articulos no pueden contener palabras malsonantes"/>
	</bean>
	<bean id="legalText2" class="domain.LegalText">
		<property name="type" value="TERMS"/>
		<property name="codeLanguage" value="en"/>
		<property name="body" value="Articles can not have bad words"/>
	</bean>
	<bean id="legalText3" class="domain.LegalText">
		<property name="type" value="COOKIES"/>
		<property name="codeLanguage" value="es"/>
		<property name="body" value="Esta web usa cookies para su mejor funcionamiento"/>
	</bean>
	<bean id="legalText4" class="domain.LegalText">
		<property name="type" value="COOKIES"/>
		<property name="codeLanguage" value="en"/>
		<property name="body" value="This web uses cookies in order to improve its funcionallity"/>
	</bean>
	
</beans>